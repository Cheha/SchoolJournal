@model SchoolJournal.Areas.Admin.Models.TeacherCreateViewModel

@{
    ViewBag.Title = "Создать нового учителя";
}

<div class="col-md-8 col-md-offset-2">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Укажите данные учителя</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        @using (@Html.BeginForm("Create", "Teacher", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })

                        <div class="col-sm-9">
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "teacher@example.com" } })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-3 control-label" })

                        <div class="col-sm-9">
                            @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Мария" } })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FatherName, new { @class = "col-sm-3 control-label" })

                        <div class="col-sm-9">
                            @Html.EditorFor(m => m.FatherName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ивановна" } })
                            @Html.ValidationMessageFor(m => m.FatherName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName, new { @class = "col-sm-3 control-label" })

                        <div class="col-sm-9">
                            @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Иванова" } })
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 control-label" })

                        <div class="col-sm-9">
                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.Password) } })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PasswordConfirm, new { @class = "col-sm-3 control-label" })

                        <div class="col-sm-9">
                            @Html.EditorFor(m => m.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.PasswordConfirm) } })
                            @Html.ValidationMessageFor(m => m.PasswordConfirm, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index")'">Отмена</button>
                    <button type="submit" class="btn btn-info pull-right">Создать</button>
                </div>
                <!-- /.box-footer -->
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
